<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link href="{{ asset('styles/app.css')}}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
       <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container">
                <a class="navbar-brand" href="#">Navbar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" aria-current="page" href="{{ path('home') }}">Home</a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="nav-link">Email: {{ app.user.email }}</a>
                        <form action="/logout" method="post">
                            <button type="submit" class="text-capitalize btn btn-primary">logout</button>
                        </form>
                        <a href="{{ path('listing.manage') }}" class="text-capitalize nav-link">manage your listings</a>
                    {% else %}
                         <a class="nav-link" href="{{ path('login') }}">Login</a>
                        <a class="nav-link" href="{{ path('register') }}">Register</a>
                    {% endif %}
                    <button class="btn btn-primary">
                        <a href="{{ path('listing.create') }}" class="text-white text-capitalize link-underline link-underline-opacity-0">post a job</a>
                    </button>
                    <a class="nav-link text-capitalize" href="{{ path('listing.query') }}">search</a>
                </div>
                </div>
            </div>
        </nav>
        {% block content %}
        
        {% endblock %}
    </body>
</html>
